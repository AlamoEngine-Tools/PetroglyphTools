{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "**/PG.Commons.csproj",
            "**/PG.StarWarsGame.csproj",
            "**/PG.StarWarsGame.Files.DAT.csproj",
            "**/PG.StarWarsGame.Files.MEG.csproj",
            "**/PG.StarWarsGame.Localisation.csproj",
            "**/PG.StarWarsGame.LSP.csproj"            
          ],
          "src": ".."
          }
      ],
      "dest": "api",
      "disableGitFeatures": false,
      "disableDefaultFilter": false
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md"
        ]
      },
      {
        "files": [
          "articles/**.md",
          "articles/**/toc.yml",
          "toc.yml",
          "*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "dest": "../docs",
    "globalMetadata": {
      "_enableSearch": "true"
    },
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      "default",
      "templates/material"
    ],
    "postProcessors": ["ExtractSearchIndex"],
    "markdownEngineName": "markdig",
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": false,
    "disableGitFeatures": false
  }
}